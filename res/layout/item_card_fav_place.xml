<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_bkg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_alpha" >
    </View>

    <LinearLayout
        android:id="@+id/ll_card_nameinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/more_info"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_alpha" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_card_link"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/share_bkg"
            android:contentDescription="@string/img_description"
            android:src="@drawable/ic_card_web" />

        <View
            android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/divider_alpha" >
        </View>

        <ImageButton
            android:id="@+id/ib_card_route"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/fav_bkg"
            android:contentDescription="@string/img_description"
            android:src="@drawable/ic_card_directions" />

        <View
            android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/divider_alpha" >
        </View>

        <ImageButton
            android:id="@+id/ib_card_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/share_bkg"
            android:contentDescription="@string/img_description"
            android:src="@drawable/ic_share_grey" />

        <View
            android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/divider_alpha" >
        </View>

        <ImageButton
            android:id="@+id/ib_card_fav"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/fav_bkg"
            android:contentDescription="@string/img_description"
            android:src="@drawable/ic_box_places" />
    </LinearLayout>

</LinearLayout>